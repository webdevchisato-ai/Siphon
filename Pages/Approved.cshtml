@page
@model Siphon.Pages.ApprovedModel
@{
    ViewData["Title"] = "Approved Files";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-check-circle-fill text-success"></i> Approved Library</h2>
    </div>

    @if (Model.Files.Count == 0)
    {
        <div class="alert alert-secondary text-center py-5 shadow-sm rounded-3">
            <i class="bi bi-folder2-open fs-1 mb-2 d-block text-muted"></i>
            <h5 class="fw-bold text-muted">Folder is Empty</h5>
            <p class="mb-0 small">No approved files are currently stored.</p>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th scope="col" class="ps-4 py-3">Filename</th>
                            <th scope="col">Approved Under</th>
                            <th scope="col">Size</th>
                            <th scope="col">Date Added</th>
                            <th scope="col" class="text-end pe-4">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var file in Model.Files)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-primary text-break">
                                    <i class="bi bi-file-earmark-play me-2 text-secondary"></i>
                                    @file.Name
                                </td>
                                <td class="text-muted" style="white-space: nowrap;">@file.ApprovedDirReadable</td>
                                <td class="text-muted" style="white-space: nowrap;">@file.Size</td>
                                <td class="text-muted small" style="white-space: nowrap;">@file.Created.ToString("MMM dd, HH:mm")</td>
                                <td class="text-end pe-4">
                                    <a href="@file.Url" download class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-download"></i> Download
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer bg-white text-end text-muted small py-2">
                Total Files: @Model.Files.Count
            </div>
        </div>
    }
</div>