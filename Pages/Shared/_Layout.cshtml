<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Siphon</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Siphon.styles.css" asp-append-version="true" />

    <style>
        /* Custom tweaks for a 'dark mode' feel on the navbar */
        .navbar-brand {
            font-weight: 700;
            letter-spacing: 1px;
        }

        .nav-link {
            font-weight: 500;
        }

        .card {
            border-radius: 12px;
        }

        .btn {
            border-radius: 8px;
        }
    </style>
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm mb-4 py-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-page="/Index">
                    <i class="bi bi-cloud-download-fill text-primary"></i> SIPHON
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Downloader">Downloader</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Pending">Pending Approval</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Approved">Approved</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Settings">Settings</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-3">
                        <span class="navbar-text text-white-50 small">
                            <i class="bi bi-shield-lock-fill"></i> Tor Secured
                        </span>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-page="/Login" asp-page-handler="Logout" class="btn btn-outline-light btn-sm">
                                Logout
                            </a>
                        }
                    </div>
                </div>
            </div>
            <p style="color:lightgray;margin-right:10px;position:center;">v2.2.2</p>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>