@page
@model Siphon.Pages.PendingModel
@{
    ViewData["Title"] = "Pending Approval";
}

<style>
    .heatmap-container {
        display: flex;
        align-items: flex-end; /* Align bars to bottom */
        height: 40px; /* Height of the graph */
        width: 100%;
        position: absolute;
        bottom: 0;
        left: 0;
        z-index: 5;
        opacity: 0.8;
        pointer-events: none; /* Let clicks pass through to the video */
        background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
    }

    .heatmap-bar {
        flex: 1; /* Distribute width equally */
        margin: 0 1px; /* Tiny gap between bars */
        min-width: 2px;
        transition: height 0.2s;
    }
</style>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0"><i class="bi bi-hourglass-split text-primary"></i> Pending Approval</h2>
            <small class="text-muted">Review downloaded content before aproving.</small>
        </div>
        <a asp-page="/Downloader" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Downloader
        </a>
    </div>

    @if (Model.Files.Count == 0)
    {
        <div class="text-center py-5 mt-5">
            <div class="mb-3">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
            </div>
            <h3 class="fw-bold">All Caught Up!</h3>
            <p class="text-muted">No pending files waiting for approval.</p>
            <a asp-page="/Downloader" class="btn btn-primary mt-3">
                <i class="bi bi-plus-lg"></i> Add More Downloads
            </a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var file in Model.Files)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="position-relative bg-black rounded-top overflow-hidden" style="padding-top: 56.25%;">

                            @if (!file.IsProcessing)
                            {
                                <a href="@file.OriginalVideoUrl"
                                   download="@file.Name"
                                   class="position-absolute top-0 end-0 btn btn-sm btn-dark m-2 opacity-75"
                                   title="Download"
                                   style="z-index: 10;">
                                    <i class="bi bi-download text-white"></i>
                                </a>
                            }

                            @if (file.IsProcessing)
                            {
                                <div class="position-absolute top-0 start-0 w-100 h-100 d-flex flex-column align-items-center justify-content-center bg-dark text-white">
                                    <div class="spinner-border text-light mb-2" role="status"></div>
                                    <small>Generating Preview...</small>
                                    <script>setTimeout(() => window.location.reload(), 3000);</script>
                                </div>
                            }
                            else
                            {
                                <video class="position-absolute top-0 start-0 w-100 h-100"
                                       src="@file.PreviewVideoUrl"
                                       poster="@file.ThumbPath"
                                       muted
                                       loop
                                       preload="none"
                                       onmouseover="this.play()"
                                       onmouseout="this.pause();"
                                       onerror="this.src='@file.OriginalVideoUrl'"
                                       style="object-fit: cover; cursor: pointer;">
                                </video>

                                <span class="position-absolute bottom-0 end-0 badge bg-dark m-2 opacity-75">
                                    <i class="bi bi-play-fill"></i> Hover
                                </span>
                            }

                            @if (file.VolumeData != null && file.VolumeData.Count > 0)
                            {
                                <div class="heatmap-container">
                                    @foreach (var val in file.VolumeData)
                                    {
                                        // Calculate Color based on intensity
                                        // Low (0-30) = Blue/Teal (Talking)
                                        // Mid (30-60) = Green/Yellow (Movement)
                                        // High (60+) = Red/Orange (Loud Action)
                                        string colorClass = val > 60 ? "#ff4d4d" : (val > 30 ? "#ffd700" : "#00bfff");

                                        <div class="heatmap-bar"
                                             style="height: @(val)%; background-color: @colorClass; box-shadow: 0 0 4px @colorClass;">
                                        </div>
                                    }
                                </div>
                            }
                        </div>

                        <div class="card-body">
                            <h6 class="card-title text-truncate fw-bold mb-3" title="@file.Name">
                                @file.Name
                            </h6>

                            <div class="d-grid gap-2">
                                @if (file.IsProcessing)
                                {
                                    <button class="btn btn-secondary disabled">Processing...</button>
                                }
                                else
                                {
                                    <form method="post" class="d-flex gap-2">
                                        <input type="hidden" name="fileName" value="@file.Name" />

                                        @if (Model.ApprovalDirectories.Count > 1)
                                        {
                                            <div class="btn-group flex-grow-1">
                                                <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="bi bi-check-lg"></i> Approve
                                                </button>
                                                <ul class="dropdown-menu w-100">
                                                    @foreach (var dir in Model.ApprovalDirectories)
                                                    {
                                                        <li>
                                                            <button type="submit" asp-page-handler="Approve" name="targetDir" value="@dir" class="dropdown-item d-flex align-items-center gap-2">
                                                                <i class="bi bi-folder2-open text-warning"></i>
                                                                <span>@dir.Replace("Extra_Approved/", "")</span>
                                                            </button>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        }
                                        else
                                        {
                                            <button type="submit" asp-page-handler="Approve" name="targetDir" value="Approved" class="btn btn-success flex-grow-1">
                                                <i class="bi bi-check-lg"></i> Approve
                                            </button>
                                        }

                                        <button type="submit" asp-page-handler="Deny" class="btn btn-outline-danger" title="Deny / Delete Permanently">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>